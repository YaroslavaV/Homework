package com.gmail.thepowerofyar;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		int ticket;
		System.out.println("Введите четырехзначный номер билета");
		ticket = sc.nextInt();

		int left = ticket / 1000 + ticket % 1000 / 100;
		int right = ticket % 100 / 10 + ticket % 10;

		if (ticket < 1000 || ticket >= 10000) {
			System.out.println("Число должно быть четырехзначным!");

		} else {
			if (left == right) {
				System.out.println(left);
				System.out.println(right);
				System.out.println("Поздравляю, Вы счастливчик!");
			} else {
				System.out.println(left);
				System.out.println(right);
				System.out.println("Билет несчастливый. Повезет в следующий раз!");
			}

		}

	}
}
