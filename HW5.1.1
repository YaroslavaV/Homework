package com.gmail.thepower;

import java.util.Arrays;
import java.util.Random;

public class Main {

	/**
	 * The method creates an array with random values from 0 to 1000 with a size of
	 * with a size of 9.
	 * 
	 * @param a <code> int </code> value.
	 * @return <code> int </code> value. Random array
	 * @author Yaroslava
	 */

	public static int[] input(int[] a) {
		Random rn = new Random();
		a = new int[9];
		for (int i = 0; i < a.length; i++) {
			a[i] = 0 + rn.nextInt(1000);
		}
		System.out.println(Arrays.toString(a));
		return a;
	}

	/**
	 * The method searches for the maximum value of the array and displays it on the
	 * and displays it on the screen.
	 * 
	 * @param b <code> int </code>
	 * @return <code> int </code> Maximum value
	 * @author Yaroslava
	 */

	public static int[] max(int[] b) {
		int[] a = new int[9];
		b = input(a);
		int max = b[0];
		for (int i = 0; i < b.length; i++) {
			if (b[i] > max) {
				max = b[i];
			}
		}
		System.out.println("Максимальное значение массива: " + max);
		return b;
	}

	public static void main(String[] args) {
		int[] a = new int[9];
		int[] b = new int[9];

		max(b);
	}

}
